<div class="container justify-content-center">
  <div class="row mt-3 d-flex justify-content-center">
    <div class="col-3 text-left">
      <p class="pheader">検索結果</p>
    </div>
  </div>

  <div class="row mt-3 d-flex justify-content-center">
    <div class="col-10">
      <table class="table border-top border-bottom table-hover table-inverse">
        <% if @range == "User" %>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td class="result">
                  <%= image_tag user.get_profile_image(75, 75) %>
                </td>
                <td class="align-middle">
                  <%= link_to user_path(user), class: "text-dark" do %>
                    <b><%= user.nickname %></b>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        <% else %>
          <tbody>
            <% @posts.each do |post| %>
                <tr>
                  <td><%= post.user.nickname %></td>
                  <td>
                    <%= link_to post_path(post), class: "text-dark" do %>
                      <%= post.body %>
                    <% end %>
                  </td>
                  <td><i class="fa-regular fa-comment"></i> <%= post.comments.count %></td>
                </tr>
            <% end %>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>