<% if post.favorited_by?(current_user) %>
  <%= link_to favorite_path(:id, post_id: post.id, user_id: current_user.id), method: :delete, class: "text-dark", remote: true do %>
    <i class="fa-solid fa-heart text-danger"></i>
    <%= post.favorites.count %> いいね
  <% end %>
<% else %>
  <%= link_to favorites_path(post_id: post.id, user_id: current_user.id), method: :post, class:"text-dark", remote: true do %>
    <i class="fa-solid fa-heart text-primary"></i>
    <%= post.favorites.count %> いいね
  <% end %>
<% end %>