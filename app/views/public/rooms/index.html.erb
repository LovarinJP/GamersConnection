<div class="container justify-content-center">
  <div class="row mt-3 d-flex justify-content-center">
    <div class="col-md-4 col-12">
      <p class="pheader">メッセージ一覧</p>
    </div>
  </div>

  <% @another_entries.each do |entry| %>
    <table class="table">
      <tbody>
        <tr>
          <td class="result-head align-middle" rowspan="2">
            <%= link_to user_path(entry) do %>
              <%= image_tag entry.user.get_profile_image(75, 75) %>
            <% end %>
          </td>
          <td class="align-middle text-center" colspan="2">
            <%= entry.user.name %>
          </td>
          <td class="result-foot align-middle text-right">
            <%= entry.room.messages.last.created_at.strftime("%-m/%-d %H:%M") %>
          </td>
        </tr>
        <tr>
          <td class="align-middle" colspan="3">
            <%= entry.room.messages.last.message %>
          </td>
        </tr>
      </tbody>
    </table>
  <% end %>

  <div class="row">
    <div class="col-4 offset-4 text-center">
      <div class="pagination">
        <%= paginate @another_entries %>
      </div>
    </div>
  </div>