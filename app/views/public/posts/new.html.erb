<div class="container justify-content-center">
  <div class="row mt-3 d-flex justify-content-center">
    <div class="col-3 text-left">
      <p style="font-size: 3rem;">新規投稿</p>
    </div>
  </div>

  <div class="row mt-3 justify-content-center">
    <div class="col-5">
      <%= form_with model: @post do |f| %>
        <div class="d-flex justify-content-start">
          <%= f.label :画像, style: "width: 60px;" %>
          <%= f.file_field :image, accept: "image/*", include_blank: "ファイルを選択" %>
        </div>
        <div style="display: flex; align-items: baseline;">
          <%= f.text_area :body, placeholder: "いろんなことを共有しよう!", style: "width: 26rem; height: 8rem;"%>
        </div>
        <div class="mt-2 d-flex justify-content-end">
          <%= f.submit "送信", class: "btn btn-info" %>
        </div>
      <% end %>
    </div>
  </div>
</div>