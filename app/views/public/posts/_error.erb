<% if post.errors.any? %>
  <div class="row mt-3 d-flex justify-content-center">
    <div class="col-md-3 col-12 text-left">
      <%= post.errors.count %>件のエラーが発生しました
      <ul>
        <% post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>