<div class="container">
  <div class="row d-flex justify-content-center">
    <div class="col-md-6 col-12 text-center">
      <p  class="pheader">マイページ</p>
    </div>
  </div>

  <div class="row">
    <div class="col-md-2 col-12 border rounded">
      <div class="d-flex justify-content-center">
        <%= link_to user_path(current_user) do %>
          <%= image_tag @user.get_profile_image(150, 150), class: "image" %>
        <% end %>
      </div>
      <div class="text-center">
        <b><%= @user.nickname %></b>
      </div>
      <div class="text-center">
        <%= @user.caption %>
      </div>
      <div class="text-left">
        投稿数　　：<%= @user.posts.count %>
      </div>
      <div class="text-left">
        <%= link_to follows_user_path(current_user), class: "text-dark" do %>
          フォロー　：<%= @user.follows.count %>
        <% end %>
      </div>
      <div class="text-left">
        <%= link_to followeds_user_path(@user), class: "text-dark" do %>
          フォロワー：<%= @user.followeds.count %>
        <% end %>
      </div>
      <%= link_to '新規投稿', new_post_path, class: "btn btn-success rounded d-flex justify-content-center mt-2" %>
      <%= link_to "グループ作成", new_group_path, class: "btn btn-success rounded d-flex justify-content-center mt-2" %>
      <%= link_to "いいね一覧", favorites_user_path(current_user), class: "btn btn-info d-flex justify-content-center border rounded mt-2" %>
      <%= link_to edit_user_path(current_user), class: "btn btn-secondary d-flex justify-content-center mt-2" do %>
        <i class="fa-solid fa-user-gear text-light"></i>
      <% end %>
    </div>

    
    <div class="col-md-9 offset-md-1 col-12">
      <% @posts.each do |post| %>
        <%= render 'public/posts/post_list', post: post %>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-4 offset-4 col-12 text-center">
      <div class="pagination">
        <%= paginate @posts %>
      </div>
    </div>
  </div>
</div>

