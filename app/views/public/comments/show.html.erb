<div class="container justify-content-center">
  <div class="row mt-3 d-flex justify-content-center">
    <div class="col-4 text-left">
      <p class="pheader">コメント詳細</p>
    </div>
  </div>

  <div class="border-top border-bottom">
    <div class="post-row row">
      <div class="col-2">
        <%= link_to user_path(@comment.user) do %>
          <%= image_tag @comment.user.get_profile_image(100, 100), class: "image" %>
        <% end %>
      </div>
      <div class="post col-4 text-left">
        <b><%= @comment.user.nickname %></b>
      </div>
      <div class="col-2 offset-2 text-secondary">
        <%= @comment.created_at.strftime("%-m/%-d %H:%M") %>
      </div>
    </div>

    <div class="row align-items-end">
      <div class="post col-6 offset-2">
        <div>
          <%= @comment.comment %>
        </div>
      </div>
      <% if @comment.image.present? %>
        <div class="col-6 offset-2">
          <%= image_tag @comment.get_image(400, 500) %>
        </div>
      <% end %>
      <% if @comment.user == current_user %>
        <div class="col-2 offset-2">
          <%= link_to "削除", post_comment_path(post_id: @post.id, id: @comment.id), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-danger" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
