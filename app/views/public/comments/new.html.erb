<div class="container">
  <div class="row d-flex justify-content-center">
    <div class="col-6 col-12 text-center">
      <p class="pheader">コメント作成</p>
    </div>
  </div>

  <div class="row mt-3 justify-content-center">
    <div class="col-md-5 col-12">
      <%= form_with model: @comment,url: post_comments_path, method: :post do |f| %>
        <div class="form-group">
          <%= f.label :画像, class: "col-form-label" %>
          <%= f.file_field :image, accept: "image/*", include_blank: "ファイルを選択" %>
        </div>
        <div class="form-group">
          <%= f.label :コメント内容, class: "col-form-label" %>
          <%= f.text_area :comment, class: "form-control" %>
        </div>
        <div class="form-group mt-2 d-flex justify-content-end">
          <%= f.submit "送信", class: "btn btn-info" %>
        </div>
      <% end %>
    </div>
  </div>
</div>