<div class="container">
  <div class="row d-flex justify-content-center">
    <div class="col-6 text-center">
      <p class="pheader">ユーザー詳細</p>
    </div>
  </div>

  <div class="row d-flex justify-content-center">
    <div class="col-5">
      <div class="d-flex justify-content-center">
        <%= image_tag @user.get_profile_image(200, 200) %>
      </div>

      <table class="d-flex justify-content-center">
        <tr>
          <td class="user-table"><b>名前：</b></td>
          <td class="user"><b><%= @user.name %></td>
        </tr>
        <tr>
          <td class="user-table"><b>ニックネーム：</b></td>
          <td class="user"><b><%= @user.nickname %></b></td>
        </tr>
        <tr>
          <td class="user-table"><b>紹介文：</b></td>
          <td class="user"><%= @user.caption %></td>
        </tr>
        <tr>
          <td colspan="2">
            <% if @user.is_active == false %>
              <div class="explain mt-2 text-center text-danger">
                <b><%= @user.nickname %>さんは退会済です</b>
              </div>
            <% elsif %>
              <div class="explain mt-2 text-center">
                <%= link_to "退会させる", admin_users_withdraw_path(id: @user.id), method: :patch, class: "btn btn-danger", data: { confirm: "本当に退会しますか？" } %>
              </div>
            <% end %>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>
