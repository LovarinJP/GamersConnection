<div class="container">
  <div class="row d-flex justify-content-center">
    <div class="col-md-6 col-12 text-center">
      <p class="pheader">投稿詳細</p>
    </div>
  </div>

  <%= render 'post_list', post: @post %>

  <% @post.comments.each do |comment| %>
    <%= link_to admin_post_comment_path(post_id: @post.id, id: comment.id), class: "text-dark" do %>
      <div class="border-top border-bottom">
        <div class="comment-row row">
          <div class="col-md-2 col-4">
            <%= image_tag comment.user.get_profile_image(75, 75) %>
          </div>
          <div class="col-md-4 col-4 text-left">
            <b><%= comment.user.nickname %></b>
          </div>
          <div class="col-md-2 offset-md-2 col-3 text-secondary">
            <%= comment.created_at.strftime("%-m/%-d %H:%M") %>
          </div>
        </div>

        <div class="row">
          <div class="col-md-6 offset-md-2 col-12">
            <div>
                <%= comment.comment %>
            </div>
          </div>
          <% if comment.image.present? %>
            <div class="col-md-6 offset-md-2 col-12">
              <%= image_tag comment.get_image(300, 300) %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
