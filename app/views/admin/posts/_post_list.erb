<div class="border-top border-bottom">
  <div class="post-row row">
    <div class="col-2">
      <%= link_to admin_user_path(post.user_id) do %>
        <%= image_tag post.user.get_profile_image(100, 100) %>
      <% end %>
    </div>
    <div class="post col-4 text-left">
      <b><%= post.user.nickname %></b>
    </div>
    <div class="col-2 offset-2 text-secondary">
      <%= post.created_at.strftime("%-m/%-d %H:%M") %>
    </div>
  </div>


  <div class="row align-items-end">
    <div class="post col-6 offset-2">
      <div>
      <% if !defined? @detail_page %>
        <%= link_to admin_post_path(post), class: "text-dark" do %>
          <%= post.body %>
        <% end %>
      <% else %>
        <%= post.body %>
      <% end %>
      </div>
    </div>
    <% if post.image.present? %>
    <div class="col-6 offset-2">
      <%= image_tag post.get_image(400, 500) %>
    </div>
    <% end %>
    <% if defined? @detail_page %>
      <div class="col-2 offset-2">
        <%= link_to "削除", admin_post_path(post), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-danger" %>
      </div>
    <% end %>
  </div>
</div>